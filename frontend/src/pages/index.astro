---
import Layout from '../layouts/Layout.astro';
import StatusDashboard from '../components/StatusDashboard.astro';
---

<Layout title="Uptime Monitor">
	<main>
		<h1 class="title">Uptime Monitor</h1>
		<StatusDashboard />
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.title {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
</style>
